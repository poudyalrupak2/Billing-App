@model DemoApplication.Models.AssignPackage

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutTravels.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AssignPackage</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">
                <label>Package Name</label>
            </div>
            <div class="col-md-10">
                @Html.DropDownList("PackageId", null,"--select package", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PackageId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <label>Customer Name</label>
            </div>
            <div class="col-md-10">
                @Html.DropDownList("CustomerId", null,"--select customer", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
            </div>
        </div>

      
        <div class="form-group">
            <div class="col-md col-md-12">
                <center>
                    <input type="submit" value="Create" class="btn btn-primary" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                </center>

            </div>
        </div>
    </div>
}



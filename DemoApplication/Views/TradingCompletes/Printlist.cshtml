@model DemoApplication.Models.ViewModels.invoiceVM

@{
    ViewBag.Title = "GetList";
    Layout = "~/Views/Shared/_LayoutTrading.cshtml";
}

<style>
    table, tr, td {
        border: none;
    }

        tr.details td {
            border-style: hidden;
        }

        tr.details1 td {
            border-right: hidden;
            border-left: hidden;
            border-bottom: hidden;
            border-top: 1px solid black;
        }

   

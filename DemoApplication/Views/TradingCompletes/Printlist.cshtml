<div id="ExpReport">
    <h5 style="text-align:right">Date:@DateTime.Now.ToShortDateString()</h5>


    <h1 style="text-align:center"><b> DibugSoft </b></h1>
    <h3 style="text-align:Left">Name:@Model.Customer</h3>
    <h3 style="text-align:Left">InvoiceNo:INV-@Model.InvoiceNo</h3>


    <table class="table table-bordered" id="tblTrading">
        <tr>
            <th>
                sno
            </th>
            <th>
                ProductName
            </th>

            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Total
            </th>

        </tr>
        @if (Model.Goods.Count() > 0)
        {
            int i = 0;

            foreach (var item in Model.Goods)
            {

                <tr>
                    <td>
                        @(i += 1)
                    </td>
                    <td>
                        @item.GoodsName

                    </td>
                    <td>

                        @item.Quantity
                    </td>
                    <td>
                        @item.Rate
                    </td>
                    <td>
                        @item.subTotal
                    </td>



                </tr>
            }
            <tr class="border-0">
                <td></td>
                <td>
                <td></td>
                <td align="right" >Subtotal:</td>
                <td>
                    @{
                        @Model.Subtotal

                    }
                </td>
            </tr>

            <tr style="border:none">
                <td></td>
                <td>
                <td></td>
                <td align="right">Vat:</td>
                <td>
                    @{
                        @Model.Vat

                    }
                </td>
            </tr>

            <tr class="details" style="border:0">
                <td></td>
                <td>
                <td></td>
                <td align="right">Other:</td>

                <td>
                    @Model.Other
                </td>

            </tr>
            <tr class="details">
                <td></td>
                <td></td>
                <td></td>
                <td align="right">GrandTotal:</td>
                <td>

                    @Model.GrandTotal

                </td>
            </tr>
        }
    </table>

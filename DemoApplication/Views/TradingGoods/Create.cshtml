@model DemoApplication.Models.TradingGoods

@{
    Layout = "~/Views/Shared/_LayoutTrading.cshtml";

}

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message </div>
}

@using (Html.BeginForm("Create", "TradingGoods", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-row">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-4 mb-3">
            <div class="form-group">
                @Html.LabelFor(model => model.GoodId, new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.GoodId, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GoodId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="form-group">
                @Html.LabelFor(model => model.GoodName, new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.GoodName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GoodName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                @Html.LabelFor(model => model.MfdDate, new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.MfdDate, new { @class = "form-control", id = "datepicker" })
                @Html.ValidationMessageFor(model => model.MfdDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ExpiryDate, new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.ExpiryDate, new { @class = "form-control", id = "datepicker1" })
                @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="col-md-4 mb-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ShortDetail, new { @class = "control-label col-md-2" })

                @Html.TextAreaFor(model => model.ShortDetail, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ShortDetail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <label>Vat</label>&nbsp;
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="true" name="Vat" style="height:15px;width:15px;" />
                    </label>
                </div>
                @Html.ValidationMessageFor(model => model.Vat, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-12">

            <div class="form-group">
                @Html.LabelFor(model => model.LongDetail, new { @class = "control-label col-md-2" })

                @Html.TextAreaFor(model => model.LongDetail, new { @class = "form-control", @cols = 20, @rows = 5 })
                @Html.ValidationMessageFor(model => model.LongDetail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Thumbail, new { @class = "control-label col-md-2" })

                <input type="file" id="TImage" Name="TImage" class="form-control" />

                @Html.ValidationMessageFor(model => model.Thumbail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4 mb-3">

            <div class="form-group">
                <label> Images</label>

                <input type="file" id="AImage" Name="AImage" class="form-control" multiple />


            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4 mb-3">

                @Html.LabelFor(model => model.RetailRate, new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.RetailRate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RetailRate, "", new { @class = "text-danger" })
                <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4 mb-3">

                @Html.LabelFor(model => model.WholesaleRate, new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.WholesaleRate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.WholesaleRate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Quantity, new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                @Html.LabelFor(model => model.CoupenCode, new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.CoupenCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CoupenCode, "", new { @class = "text-danger" })
            </div>
        </div>









        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    <link rel="stylesheet" href="~/Scripts/jquery-ui-1.12.1/jquery-ui.css">
    <link rel="stylesheet" href="~/Scripts/nepali.datepicker.v2.2.min.css">

    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/nepali.datepicker.v2.2.min.js"></script>

    <script src="~/Scripts/jquery-ui-1.12.1/jquery-ui.js"></script>

    <script>
        $(function () {
            $("#datepicker").datepicker();
            $("#datepicker1").datepicker();

           
        });
    </script>
}


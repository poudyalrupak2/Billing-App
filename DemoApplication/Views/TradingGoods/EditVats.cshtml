@model DemoApplication.Models.Vat

@{
    ViewBag.Title = "EditVats";
    Layout = "~/Views/Shared/_LayoutTrading.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Vat</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.VatPercent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.VatPercent,new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.VatPercent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md col-md-12">
                <input type="submit" value="Save" class="btn btn-p" />
                @Html.ActionLink("Back to List", "Index",new { @class = "btn btn-primary" })


            </div>
        </div>
    </div>
}

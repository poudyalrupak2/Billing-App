@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <link rel="stylesheet" href="~/Scripts/jquery-ui-1.12.1/jquery-ui.css">
    <link rel="stylesheet" href="~/Scripts/nepali.datepicker.v2.2.min.css">

    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/nepali.datepicker.v2.2.min.js"></script>

    <script src="~/Scripts/jquery-ui-1.12.1/jquery-ui.js"></script>

    <script>
        $(function () {
            $("#datepicker").datepicker({

            });
        });
        $("#cshipphoto").hide();
        $("#cdocument").hide();
        $("#logo").hide();
        $("#pp").hide();


        $("#ddlCustomerType").change(function () {

            if ($(this).val() === "Individual") {
                $("#cshipphoto").show();
                $("#pp").show();
                $("#cdocument").hide();
                $("#logo").hide();
            }
            else if ($(this).val() === "Organization") {
                $("#cdocument").show();
                $("#logo").show();
                $("#cshipphoto").hide();
                $("#pp").hide();
            }
            else {
                $("#cshipphoto").hide();
                $("#cdocument").hide();
                $("#logo").hide();
                $("#pp").hide();

            }
        });
    </script>
}

